<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="1200.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/15.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.WetterApp.Controllers.MainController">
    <children>
        <GridPane prefWidth="1600" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"></RowConstraints>
                <RowConstraints vgrow="ALWAYS"></RowConstraints>
            </rowConstraints>
            <padding>
                <Insets top="10" bottom="10" right="10" left="10"/>
            </padding>
            <VBox>
                <TextField fx:id="WetterSensorChoice" editable="false"/>
                <Button fx:id="btn1" onAction="#doSmth" text="Click me!"/>
                <ComboBox fx:id="wetterSensor" onAction="#sensorSelected"/>
            </VBox>
            <ScrollPane fx:id="sadFace" fitToWidth="true" fitToHeight="true" pannable="true" GridPane.rowIndex="1"
                AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                <padding>
                    <Insets top="10" bottom="10" right="10" left="10"/>
                </padding>
                <content>

                    <GridPane hgap="20" vgap="20"
                              AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="20" ></ColumnConstraints>
                            <ColumnConstraints percentWidth="80"></ColumnConstraints>
                        </columnConstraints>
                        <GridPane GridPane.columnIndex="0">
                            <rowConstraints>
                                <RowConstraints percentHeight="33" vgrow="ALWAYS"></RowConstraints>
                                <RowConstraints percentHeight="33" vgrow="ALWAYS"></RowConstraints>
                                <RowConstraints percentHeight="33" vgrow="ALWAYS"></RowConstraints>
                            </rowConstraints>
                            <TextField fx:id="testMessage" GridPane.fillHeight="0" GridPane.rowIndex="0">
                                Hi
                            </TextField>
                            <TextField GridPane.rowIndex="1">
                                World
                            </TextField>
                            <TextField GridPane.rowIndex="2">
                                !!!
                            </TextField>

                        </GridPane>
                        <VBox GridPane.columnIndex="1">
                            <children>

                                <LineChart fx:id="tempChart" minHeight="300">
                                    <xAxis >
                                        <NumberAxis
                                                    label="Monatz">
                                        </NumberAxis>
                                    </xAxis >
                                    <yAxis>
                                        <NumberAxis lowerBound="-20" upperBound="40" label="Temperatür"/>
                                    </yAxis>
                                </LineChart>
                                <LineChart fx:id="windChart">
                                    <xAxis>
                                        <NumberAxis lowerBound="0" upperBound="31536000" tickLabelsVisible="true"
                                                    label="Monatz"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis lowerBound="0" upperBound="25" label="Wind"/>
                                    </yAxis>
                                </LineChart>
                                <LineChart fx:id="feuchtChart">
                                    <xAxis>
                                        <NumberAxis lowerBound="0" upperBound="31536000" tickLabelsVisible="false"
                                                    label="Monatz"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis lowerBound="0" upperBound="75" label="Feuchtigkeit"/>
                                    </yAxis>
                                </LineChart>
                                <LineChart fx:id="druckChart">
                                    <xAxis>
                                        <NumberAxis lowerBound="0" upperBound="31536000" tickLabelsVisible="false"
                                                    label="Monatz"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis lowerBound="900" forceZeroInRange="false" upperBound="1200" label="Luftdrucker"/>
                                    </yAxis>
                                </LineChart>
                                <LineChart fx:id="co2Chart">
                                    <xAxis>
                                        <NumberAxis lowerBound="0" upperBound="31536000" tickLabelsVisible="false"
                                                    label="Monatz"/>
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis lowerBound="0" upperBound="10" label="Co²"/>
                                    </yAxis>
                                </LineChart>
                            </children>
                        </VBox>
                    </GridPane>
                </content>
            </ScrollPane>
        </GridPane>

    </children>
</AnchorPane>
